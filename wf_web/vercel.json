{
  "version": 2,
  "regions": ["hkg1"],  // 强制使用香港节点
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" },
        { "key": "CDN-Cache-Control", "value": "public, s-maxage=3600" }
      ]
    }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "/api", "headers": { "Cache-Control": "no-store" } },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
